//uncomment for SLURM cluster
process {
  withLabel: longtime {
    executor='slurm'
    //queue='default'
    clusterOptions = '-t 3-00:00:0 --mem=6G'
  }
  withLabel: shorttime {
    executor='slurm'
    //queue='default'
    clusterOptions = '-t 00-01:00:0 --mem=6G'
  }
  withLabel: highmem {
    executor='slurm'
    queue='bigmem'
    clusterOptions = '-t 00-20:00:0 --mem=80G'
  }
}
